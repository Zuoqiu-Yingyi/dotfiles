# REF: https://spec.editorconfig.org/#supported-pairs

root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.{md}]
indent_size = 2
trim_trailing_whitespace = false

[*.{go}]
tab_width = 4
indent_style = tab
trim_trailing_whitespace = true

[*.{yml,yaml}]
tab_width = 2
trim_trailing_whitespace = true

[*.{c,cjs,cpp,cpp,css,cts,htm,html,java,js,json,json5,jsonc,jsx,kt,less,mjs,mts,py,sass,scss,sql,svelte,tex,toml,ts,tsx,typ,vue,xml}]
indent_size = 4
trim_trailing_whitespace = true
